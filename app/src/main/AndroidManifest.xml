<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviesmatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesMatch" >
        <activity android:name=".layouts.activities.ResetPasswordActivity" android:screenOrientation="portrait" />
        <activity android:name=".layouts.activities.SplashActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layouts.activities.LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".layouts.activities.MainActivity" android:screenOrientation="portrait" />
        <activity android:name=".layouts.activities.CreateAccountActivity" android:screenOrientation="portrait" />
    </application>

</manifest>