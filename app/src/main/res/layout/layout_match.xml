<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutMatch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/imageViewItsMatch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:0.5"
            android:src="@drawable/itsmatch"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight2"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft2"
            app:layout_constraintTop_toBottomOf="@id/guidelineTop2" />


        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="255dp"
            android:layout_height="277dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/buttonMoreInfo"
            app:layout_constraintDimensionRatio="2:2"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight2"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft2"
            app:layout_constraintTop_toBottomOf="@id/textViewTitleMovie"
            />

        <TextView
            android:id="@+id/textViewTitleMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/mv_darkRed"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight2"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft2"
            app:layout_constraintTop_toBottomOf="@id/imageViewItsMatch" />

    <Button
        android:id="@+id/buttonMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Informations "
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight2"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft2"
        app:layout_constraintTop_toBottomOf="@id/imageViewPoster"
        app:layout_constraintBottom_toTopOf="@id/buttonDismiss"/>

        <Button
            android:id="@+id/buttonDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to swiping"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight2"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft2"
            app:layout_constraintTop_toBottomOf="@id/buttonMoreInfo"
            app:layout_constraintBottom_toTopOf="@id/guidelineBot2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />




</androidx.constraintlayout.widget.ConstraintLayout>


