<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewLogoSignupEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.5"
        app:layout_constraintEnd_toEndOf="@id/guidelineSignupEmailRight"
        app:layout_constraintStart_toStartOf="@id/guidelineSignupEmailLeft"
        app:layout_constraintTop_toTopOf="@id/guidelineSignupEmailTop"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewCreateAccountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Your email and country"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/editTextSignupEmail"
        app:layout_constraintEnd_toEndOf="@id/guidelineSignupEmailRight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guidelineSignupEmailLeft"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoSignupEmail" />

    <EditText
        android:id="@+id/editTextSignupEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rectangle"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:hint="Email"
        android:theme="@style/Inputs"
        app:layout_constraintBottom_toTopOf="@id/spinnerCountry"
        app:layout_constraintEnd_toEndOf="@id/guidelineSignupEmailRight"
        app:layout_constraintStart_toStartOf="@id/guidelineSignupEmailLeft"
        app:layout_constraintTop_toBottomOf="@id/textViewCreateAccountEmail" />

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rectangle"
        android:entries="@array/country"
        android:paddingVertical="5dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/buttonSignupNextEmail"
        app:layout_constraintEnd_toEndOf="@id/guidelineSignupEmailRight"
        app:layout_constraintStart_toStartOf="@id/guidelineSignupEmailLeft"
        app:layout_constraintTop_toBottomOf="@id/editTextSignupEmail" />

    <Button
        android:id="@+id/buttonSignupNextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toTopOf="@id/guidelineSignupEmailBot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerCountry" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSignupEmailRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSignupEmailTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSignupEmailLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSignupEmailBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>